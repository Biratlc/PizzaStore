@model PizzaGuys.ViewModel.LogInViewModel
@{
    ViewData["Title"] = "Login";
}



<div class="Layout">

    @*@await Html.PartialAsync("LeftBar")*@

    <div class="col-md-6" style="padding-bottom:25px">
        <h1 style="font-family: 'Century Gothic'">Login</h1>
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" style="border-radius:25px; border: 1px solid green; width: 400px;">

                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-bottom:0px; padding-bottom:0px">
                <input type="submit" value="LogIn" class="btn btn-success" />
            </div>
        </form>
        <br />
        <a asp-controller="Account" asp-action="Register">Register for free!</a>
        <br />


        @*<a class="btn btn-link" asp-area="" asp-controller="Account" asp-action="ForgetPassword">Forget Password?</a>*@
    </div>

    <img src="~/images/pizza5.jpg" />
</div>

